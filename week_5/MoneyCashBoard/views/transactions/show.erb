<div class="content_container">
<h2>Edit a Transaction</h2>

<form action="/transactions/<%= @transaction.id %>" method="post">
  <label>
    Transaction ID    <input type="number" name="transaction_id" value="<%= @transaction.id %>">
  </label>

  <label>
  Transaction Name
    <input type="text" name="name" value="<%= @transaction.name %>">
  </label>

  <label>
    Amount
    <input type="number" name="value" value=;<%= @transaction.amount) %>">
  </label>

  <input type='submit' value="Update">
</form>
</div>